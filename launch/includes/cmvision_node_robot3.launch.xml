 <group ns="robot3">
  <param name="tf_prefix" value="robot3_tf"/>
  <node name="cmvision" pkg="cmvision" type="cmvision" respawn="false"> <!-- launch-prefix="xterm -e gdb "> -->
    <remap from="image" to="/robot3/camera/rgb/image_raw"/>
    
    <remap from="/cmvision/color_file" to="/robot3/cmvision/color_file"/>
    <remap from="/cmvision/mean_shift_on" to="/robot3/cmvision/mean_shift_on"/>
    <remap from="/cmvision/color_radius_pix" to="/robot3/cmvision/color_radius_pix"/>
    <remap from="/cmvision/spatial_radius_pix" to="/robot3/cmvision/spatial_radius_pix"/>
    <remap from="/cmvision/debug_on" to="/robot3/cmvision/debug_on"/>

    <param name="color_file" value="$(find experiment_launcher)/launch/blob_detection/box_green.txt" />
    <param name="mean_shift_on" value="false" />
    <param name="color_radius_pix" value="0" />
    <param name="spatial_radius_pix" value="0" />
    <param name="debug_on" value="true" />
  </node>
 </group>

