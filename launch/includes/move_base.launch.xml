<launch>    
  <!--- Run AMCL -->
  <include file="$(find experiment_launcher)/launch/includes/amcl_diff.launch" />

  <!-- Define your move_base node -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find experiment_launcher)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find experiment_launcher)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find experiment_launcher)/config/local_costmap_params.yaml"  command="load" />
    <rosparam file="$(find experiment_launcher)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find experiment_launcher)/config/base_local_planner_params.yaml" command="load" />

    <remap from="map" to="/map" />
  </node>
</launch>